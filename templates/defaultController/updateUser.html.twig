{% extends "base.html.twig" %}
{% block title %}
	{{ parent() }}
	Modifier un user
{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-12 col-md-6 align-items-center">
				<h1 class="text-center text-primary fw-bold m-2">Modifier un 
					user</h1>
				<form method="POST">
					<input type="hidden" value="{{user.id}}" name="id" class="form-control">
					<input label="text" value="{{user.email}}" name="email" class="form-control" placeholder="mail">

					<input label="text" value="{{user.firstName}}" name="firstName" class="form-control" placeholder="prénom">

					<input label="text" value="{{user.lastName}}" name="lastName" class="form-control" placeholder="nom">

					<input label="text" value="{{user.password}}" name="password" class="form-control" placeholder="mdp">

					<input label="text" value="{{user.address}}" name="address" class="form-control" placeholder="addresse">

					<input label="text" value="{{user.postalCode}}" name="postalCode" class="form-control" placeholder="code postal">

					<input label="text" value="{{user.city}}" name="city" class="form-control" placeholder="ville">

					<input label="text" value="{{user.phone}}" name="phone" class="form-control" placeholder="téléphone">

					<input label="text" value="{{user.role}}" name="phone" class="form-control" placeholder="role">

					<div class="text-center">
						<input type="submit" value="Modifier" class="btn btn-primary m-2">
					</div>
				</form>
			</div>
		</div>1
	</div>
{% endblock %}
